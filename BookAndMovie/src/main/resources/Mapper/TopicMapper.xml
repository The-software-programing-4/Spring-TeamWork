<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bookandmovie.Dao.TopicDao">
    <insert id="addTopic" parameterType="Topic">
        insert into topic(focus, num, introduction, post_arr)
        values(#{focus}, #{num}, #{introduction}, #{post_arr});
    </insert>
    <select id="findTopic" parameterType="int" resultType="Topic">
        select * from topic where tid = #{tid};
    </select>
</mapper>