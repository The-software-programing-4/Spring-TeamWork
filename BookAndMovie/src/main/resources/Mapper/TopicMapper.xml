<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bookandmovie.Dao.TopicDao">
    <insert id="addTopic" parameterType="Topic">
        insert into topic(focus, num, introduction)
        values(#{focus}, #{num}, #{introduction});
    </insert>
    <select id="findTopic" parameterType="int" resultType="Topic">
        select * from topic where tid = #{tid};
    </select>
    <select id="listTopic" resultType="Topic">
        select *
        from topic
        order by tid asc;
    </select>
    <select id="listPid" resultType="Integer">
        select pid
        from tid_pid
        where tid = #{tid}
        order by tid asc;
    </select>
    <select id="pidLength" resultType="int">
        select count(*)
        from tid_pid
        where tid = #{tid}
    </select>
</mapper>