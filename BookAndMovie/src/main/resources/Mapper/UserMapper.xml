<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bookandmovie.Dao.UserDao">
    <select id="selectUserByUsername" resultType="User">
        select *
        from User
        where username =#{username}
    </select>
    <select id="selectUserByUseremail" resultType="User">
        select *
        from User
        where useremail =#{useremail}
    </select>
    <select id="selectUserByUserphone" resultType="User">
        select *
        from User
        where phone =#{phone}
    </select>
    <insert id="registerUserByEmail" parameterType="User">
        insert into User(email, password) values(#{email}, #{password})
    </insert>
    <insert id="registerUserByPhone" parameterType="User">
        insert into User(phone, password) values(#{phone}, #{password})
    </insert>
</mapper>
