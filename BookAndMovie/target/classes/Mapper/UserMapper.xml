<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bookandmovie.Dao.UserDao">
    <select id="selectUserByUsername" resultType="User">
        select * from USER where username = #{username}
    </select>
    <insert id="registerNewUser" parameterType="User">
        insert into `USER`(`username`,`password`) values(#{username},#{password})
    </insert>
    <select id="selectUserByEmail" resultType="User">
        select * from USER where email = #{email}
    </select>
    <select id="selectUserByUid" resultType="User">
        select * from USER where s_id = #{s_id}
    </select>
    <update id="insertUserImg">
        update `USER`  set `img` = #{photo} where `username`=#{username}
    </update>
    <update id="changPassword">
        update `USER`  set `password` = #{password} where `s_id`=#{uid}
    </update>
    <select id="getUserImg" resultType="User">
        select * from `USER` where username=#{username}
    </select>
    <update id="updateUserMessage" parameterType="User">
        update user set username=#{username} , regionOP=#{regionOP}, birthday=#{birthday} ,
        phone=#{phone}, email=#{email} ,hometown1=#{hometown1},hometown2=#{hometown2},hometown3=#{hometown3},
        livetown1=#{livetown1},livetown2=#{livetown2},livetown3=#{livetown3},
        regionOP=#{regionOP} , birthOP=#{birthOP} where s_id=#{s_id}
    </update>
</mapper>